<div class="jumbotron text-center">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h1 class="">mongo<b>scraper</b>: <i>NYT Times Edition</i></h1>
            <br>
            <a href="/scrape">
                <button type="button" id="scrape" class="btn btn-outline-dark">
                    scrape it.
                </button>
            </a>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>

<div class="conatiner">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
            {{#each article}}
            <div class="section">
                <h5>
                    <a href="article/{{this._id}}">{{this.title}}</a>
                </h5>
                <p>{{this.summary}}</p>
            </div>
            <br>
            {{/each}}
        </div>
        <div class="col-2">
        </div>
    </div>
</div>